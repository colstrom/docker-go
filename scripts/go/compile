#!/bin/sh

set -o errexit
set -o nounset
set -o xtrace

IN=${PWD}/${1}
METADATA=${PWD}/${2}
OUT=${PWD}/${3}

TAG=${TAG:-$(cat ${METADATA}/version)}

export CGO_ENABLED=0
export GOROOT_BOOTSTRAP=${GOROOT_BOOTSTRAP:-'/usr/lib/go'}
export GOROOT_FINAL=/usr/lib/go

cd ${IN}/src
git checkout ${TAG}
./make.bash
cp -a ${IN}/bin ${IN}/pkg ${IN}/src ${OUT}
